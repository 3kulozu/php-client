<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         testSuiteLoaderClass="PHPUnit_Runner_StandardTestSuiteLoader">

    <testsuites>
        <testsuite name="Sample">
            <directory>tests/sample/Test/Functional/address-balance</directory>
            <directory>tests/sample/Test/Functional/addresses</directory>
            <directory>tests/sample/Test/Functional/blocks</directory>
            <directory>tests/sample/Test/Functional/chains</directory>
            <directory>tests/sample/Test/Functional/full-addresses</directory>
            <directory>tests/sample/Test/Functional/transaction-confidence</directory>
            <directory>tests/sample/Test/Functional/transactions</directory>
            <file>tests/sample/Test/Functional/webhooks/CreateAndDeleteAllWebHooksTest.php</file>
            <file>tests/sample/Test/Functional/webhooks/CreateAndDeleteWebHookTest.php</file>
            <file>tests/sample/Test/Functional/webhooks/CreateAndListWebHookTest.php</file>
            <file>tests/sample/Test/Functional/webhooks/DeleteAllWebHooksTest.php</file>
            <file>tests/sample/Test/Functional/webhooks/GetMultipleWebHooksTest.php</file>
            <file>tests/sample/Test/Functional/webhooks/GetWebHooksTest.php</file>
            <file>tests/sample/Test/Functional/webhooks/ListWebHooksTest.php</file>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./lib</directory>
            <exclude>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
